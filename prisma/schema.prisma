generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  rides        Ride[]   @relation("UserRides")
  bookings     Booking[]
}

model Ride {
  id        String   @id @default(cuid())
  from      String
  to        String
  date      String
  time      String
  price     Float
  seats     Int
  car       String
  options   String   @default("[]")
  info      String?
  driverId  String
  createdAt DateTime @default(now())
  driver    User     @relation("UserRides", fields: [driverId], references: [id])
  bookings  Booking[]
}

model Booking {
  id        String   @id @default(cuid())
  userId    String
  rideId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  ride      Ride     @relation(fields: [rideId], references: [id])

  @@unique([userId, rideId])
}

